{
    "name": "pulselogic-frontend",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "dev": "next dev",
        "build": "next build",
        "start": "next start",
        "lint": "next lint",
        "env:dev": "node scripts/set-env.js dev",
        "env:staging": "node scripts/set-env.js staging",
        "env:prod": "node scripts/set-env.js prod",
        "env:mobile": "node scripts/set-env.js mobile",
        "env:desktop": "node scripts/set-env.js desktop",
        "mobile:build": "cross-env MOBILE_BUILD=true next build && npx cap sync",
        "mobile:add-android": "npx cap add android",
        "mobile:ios": "npx cap open ios",
        "mobile:android": "npx cap open android",
        "mobile:sync": "npx cap sync",
        "android:dev": "npm run env:mobile && cross-env MOBILE_BUILD=true CAPACITOR_ENV=development next build && npx cap sync android && npx cap open android",
        "android:build": "npm run env:mobile && cross-env MOBILE_BUILD=true next build && npx cap sync android",
        "android:apk": "cd android && gradlew.bat assembleRelease",
        "android:aab": "cd android && gradlew.bat bundleRelease",
        "build:tauri": "cross-env MOBILE_BUILD=true next build",
        "desktop:dev": "npx @tauri-apps/cli dev",
        "desktop:build": "npm run env:desktop && npx @tauri-apps/cli build",
        "version:bump": "node scripts/bump-version.js"
    },
    "dependencies": {
        "@capacitor/android": "^8.0.2",
        "@capacitor/cli": "^8.0.2",
        "@capacitor/core": "^8.0.2",
        "@capacitor/ios": "^8.0.2",
        "@tanstack/react-query": "^5.17.19",
        "axios": "^1.6.5",
        "class-variance-authority": "^0.7.0",
        "clsx": "^2.1.1",
        "framer-motion": "^12.34.3",
        "lucide-react": "^0.309.0",
        "next": "14.1.0",
        "next-auth": "^4.24.13",
        "next-themes": "^0.2.1",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "socket.io-client": "^4.6.1",
        "tailwind-merge": "^2.6.1",
        "tweetnacl": "^1.0.3",
        "tweetnacl-util": "^0.15.1",
        "zustand": "^4.4.7"
    },
    "devDependencies": {
        "@tauri-apps/cli": "^2.10.0",
        "@types/node": "^20.11.5",
        "@types/react": "^18.2.48",
        "@types/react-dom": "^18.2.18",
        "autoprefixer": "^10.4.17",
        "build": "^0.1.4",
        "cross-env": "^10.1.0",
        "eslint": "^8.56.0",
        "eslint-config-next": "14.1.0",
        "npx": "^10.2.2",
        "postcss": "^8.4.33",
        "tailwindcss": "^3.4.1",
        "tailwindcss-animate": "^1.0.7",
        "typescript": "^5.3.3"
    }
}
