# Mobile Build Environment
# Copy this to .env.local before building for mobile

# API Configuration - UPDATE THIS to your backend server IP
# For Android emulator use: http://10.0.2.2:3001/api
# For physical device use your computer's local IP: http://192.168.x.x:3001/api
# For production: use your deployed backend URL
# CHANGE THIS before building APK:
NEXT_PUBLIC_API_URL=http://YOUR_SERVER_IP:3001/api
NEXT_PUBLIC_WS_URL=ws://YOUR_SERVER_IP:3001

# App Configuration
NEXT_PUBLIC_APP_NAME=PulseLogic
NEXT_PUBLIC_APP_VERSION=1.0.0

# Feature Flags
NEXT_PUBLIC_ENABLE_MFA=true
NEXT_PUBLIC_ENABLE_BIOMETRIC=true

# Session Configuration
NEXT_PUBLIC_SESSION_TIMEOUT=3600
NEXT_PUBLIC_IDLE_TIMEOUT=60

# Mobile Build Flag - MUST be true for Capacitor
NEXT_PUBLIC_MOBILE_BUILD=true
