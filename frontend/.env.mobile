# Mobile Build Environment
# Copy this to .env.local before building for mobile

# API Configuration
# For Android emulator: http://10.0.2.2:3001/api
# For physical device (local): http://192.168.x.x:3001/api
# For production (Railway): https://YOUR-APP.up.railway.app/api

# CHANGE THIS to your Railway URL after deployment:
NEXT_PUBLIC_API_URL=https://YOUR-APP-NAME.up.railway.app/api
NEXT_PUBLIC_WS_URL=wss://YOUR-APP-NAME.up.railway.app

# App Configuration
NEXT_PUBLIC_APP_NAME=PulseLogic
NEXT_PUBLIC_APP_VERSION=1.0.0

# Feature Flags
NEXT_PUBLIC_ENABLE_MFA=true
NEXT_PUBLIC_ENABLE_BIOMETRIC=true

# Session Configuration
NEXT_PUBLIC_SESSION_TIMEOUT=3600
NEXT_PUBLIC_IDLE_TIMEOUT=60

# Mobile Build Flag - MUST be true for Capacitor
NEXT_PUBLIC_MOBILE_BUILD=true
