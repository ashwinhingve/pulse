# Application
NODE_ENV=development
PORT=3001
API_PREFIX=api

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=pulselogic
DB_PASSWORD=change_me_in_production
DB_DATABASE=pulselogic_dev
DB_SYNCHRONIZE=false

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT
JWT_SECRET=change_me_to_random_256_bit_secret
JWT_EXPIRATION=15m
JWT_REFRESH_SECRET=change_me_to_different_random_256_bit_secret
JWT_REFRESH_EXPIRATION=7d

# Security
BCRYPT_ROUNDS=12
SESSION_TIMEOUT=3600
IDLE_TIMEOUT=60
MAX_SESSIONS_PER_USER=3

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100
AUTH_RATE_LIMIT_TTL=900
AUTH_RATE_LIMIT_MAX=5

# Medical AI via HuggingFace Inference API
# Get your free API key at https://huggingface.co/settings/tokens
BIOMISTRAL_HF_API_KEY=hf_your_api_key_here
# Default: Qwen2.5-72B (best free medical reasoning). Fallback: Meta-Llama-3-8B
BIOMISTRAL_HF_MODEL_ID=Qwen/Qwen2.5-72B-Instruct

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf

# CORS
CORS_ORIGIN=http://localhost:3000

# Encryption
ENCRYPTION_KEY=change_me_to_random_256_bit_key_base64
ENCRYPTION_ALGORITHM=aes-256-gcm
